#!/bin/bash

#SBATCH --account=bgmp
#SBATCH --partition=bgmp

# activate conda environment
conda activate bgmp_py39

# define globals
input_file=$1
read_length=$2
num_reads=$3
output_file=$4

# run
/usr/bin/time -v ./histogram_generator.py -f $input_file -l $read_length -n $num_reads -o $output_file
